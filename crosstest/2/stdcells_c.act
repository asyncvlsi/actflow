export defcell FAX1 (bool? A, B, C; bool! YC, YS)
{
  prs {
    (A|B) & C | A&B => YC+

    (~A|~B|~C)&((A|B) & C | A&B) | ~A & ~B & ~C -> YS-

    (A|B|C) & (~((A|B) & C | A&B)) | A&B&C -> YS+  
  }
}
